<%- include('../header') %>

<% if(register){ %>
    <h4>You are successfully registered</h4>
<% } %>
<form action="/users/login" method="post">
    <input type="email" name="email" value="<%= data.email %>" placeholder="Email">
    <span class="error">
       <%= errors.email ? errors.email[0] : null %>
    </span>
    <br>
    <input type="password" name="password" value="<%= data.password %>" placeholder="Password">
    <span class="error">
       <%= errors.password ? errors.password[0] : null %>
    </span>
    <br>
    <button>Login</button>
</form>

<%- include('../footer') %>
